<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - C# Webアプリケーション開発演習</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Presentations.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <style>
        .nav-btn {
            border-radius: 0.375rem;
            padding: 0.5rem 1rem;
            font-weight: 600; /* Semi-bold */
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .nav-btn:hover {
                background-color: #0d6efd;
                color: #fff !important;
            }

            .nav-btn i {
                font-size: 1.2rem;
                margin-right: 0.5rem;
            }
    </style>
</head>
<body>
    <header>
        <!-- ナビゲーションからの起動に変更 -->
        <nav class="navbar navbar-expand-sm navbar-light bg-light border-bottom shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold">C# Webアプリケーション開発演習</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav gap-2">
                        <li class="nav-item">
                            <a class="nav-link nav-btn text-dark d-flex align-items-center"
                               asp-controller="Menu" asp-action="Exercise" asp-route-no="1">
                                <i class="bi bi-building"></i><span class="fw-bold">部署一覧</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-btn text-dark d-flex align-items-center"
                               asp-controller="Menu" asp-action="Exercise" asp-route-no="3">
                                <i class="bi bi-people"></i><span class="fw-bold">社員一覧</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-btn text-dark d-flex align-items-center"
                               asp-controller="Menu" asp-action="Exercise" asp-route-no="2">
                                <i class="bi bi-plus-circle"></i><span class="fw-bold">部署登録</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-btn text-dark d-flex align-items-center"
                               asp-controller="Menu" asp-action="Exercise" asp-route-no="4">
                                <i class="bi bi-person-plus"></i><span class="fw-bold">社員登録</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Fullness.Inc. -
            <a href="https://www.fullness.co.jp" target="_blank">https://www.fullness.co.jp</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- バリデーション機能を追加 -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
